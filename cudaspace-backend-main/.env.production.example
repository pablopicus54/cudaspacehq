NODE_ENV=production
PORT=5002

# Core
DATABASE_URL="<your-mongodb-connection-uri>"
FRONTEND_URL=https://www.cudaspace.com
BACKEND_IMAGE_URL=https://api.cudaspace.com/uploads

# Auth/JWT
JWT_SECRET="<random-32-char-secret>"
EXPIRES_IN=1d
REFRESH_TOKEN_SECRET="<random-32-char-secret>"
REFRESH_TOKEN_EXPIRES_IN=7d
RESET_PASS_TOKEN="<random-32-char-secret>"
RESET_PASS_TOKEN_EXPIRES_IN=1h
RESET_PASS_LINK=https://www.cudaspace.com/auth/set-new-password

# Stripe
STRIPE_SECRET_KEY="<sk_live_...>"
STRIPE_PUBLISHABLE_KEY="<pk_live_...>"
STRIPE_WEBHOOK_SECRET="<whsec_...>"

# SMTP
SMTP_HOST=smtp.zoho.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER="support@cudaspace.com"
SMTP_PASS="<app-password>"
SMTP_FROM_EMAIL="support@cudaspace.com"
SMTP_FROM_NAME="Cudaspace"

# Optional external services
NOWPAYMENTS_API_KEY="<your-nowpayments-api-key>"

# Security
PASSWORD_SALT=12
CONFIG_ENCRYPTION_KEY="<32-byte-hex-or-base64-key>"

# Super admin defaults
SUPERADMIN_EMAIL="admin@cudaspace.com"
SUPERADMIN_PASSWORD="<set-a-strong-password>"
SUPERADMIN_NAME="SuperAdmin"
SUPERADMIN_NUMBER="<phone-number>"